{
	"compilerOptions": {
	  "target": "es2016",       
	  "module": "ES2015",                                
	  "rootDir": "./src",                                 
	  "outDir": "./dist",                                  
	  "isolatedModules": true,                          
	  "allowSyntheticDefaultImports": true,             
	  "esModuleInterop": true,                             
	  "forceConsistentCasingInFileNames": true,            
	  "strict": true, 
	  "skipLibCheck": true,                                 
	  "declaration": true
	}
  }
  